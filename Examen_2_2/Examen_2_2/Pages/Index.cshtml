@page
@model IndexModel
@{
    ViewData["Title"] = "Página Principal";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/pizza 1.jpg" alt="ASP.NET" style="width:100%; height:75vh;" class="img-rounded" />
            <div class="carousel-caption" style="background-color:rgba(229, 192, 192, 0.53); background-size:contain; border-radius:15px;" role="option">
                <p>
                    Cree las mejores pizzas usted mismo.
                    <a class="btn btn-default" href="Formulario">
                        Crear Pizza...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/pizza 2.jpg" alt="Visual Studio"  style="width:100%; height:75vh;" class="img-responsive" />
            <div class="carousel-caption" style="background-color:rgba(229, 192, 192, 0.53); background-size:contain; border-radius:15px;" role="option">
                <p>
                    Con sus ingredientes favoritos.
                    <a class="btn btn-default" href="Formulario">
                        Crear Pizza...
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/pizza 3.jpg" style="width:100%; height:75vh;"  alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" style="background-color:rgba(229, 192, 192, 0.53); background-size:contain; border-radius:15px;" role="option">
                <p>
                    Al alcance de un click.
                    <a class="btn btn-default" href="Formulario">
                        Crear Pizza...
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
